{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "..",
  "roots": ["<rootDir>/test"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFiles": [
    "<rootDir>/test/setup.ts"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/test/matchers/db.matcher.ts"
  ],
  "testTimeout": 30000,
  "maxWorkers": 1
}